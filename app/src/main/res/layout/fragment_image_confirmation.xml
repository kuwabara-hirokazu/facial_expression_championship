<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.facialexpressionchampionship.viewmodel.ImageConfirmationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="@{viewModel.theme}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="お題: 驚き" />

        <ImageView
            android:id="@+id/decision_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:imageUrl="@{viewModel.imageUrl}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/theme"
            app:layout_constraintBottom_toTopOf="@id/retry" />

        <Button
            android:id="@+id/retry"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="@string/retry_photo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/score"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/score"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="@string/score_image"
            app:layout_constraintLeft_toRightOf="@id/retry"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/retry"
            app:layout_constraintBottom_toBottomOf="@id/retry" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

